<style>
    .header-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #dcf1ff;
        padding: 3px;
        position: fixed;
        transition: top 0.3s ease-in-out;
        z-index: 998;
        top: 0;
        left: 0;
        width: 100%;
        height: 57px;
    }

    .logo {
        max-width: 150px;
        height: auto;
        cursor: pointer;
    }

        .logo:hover {
            opacity: 0.8;
        }

        .logo img {
            width: 100%;
            height: auto;
        }

    .profile {
        display: flex;
        align-items: center;
        padding-right: 10px;
    }

    .profile-image {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        cursor: pointer;
    }

    .profile-name {
        margin-left: 10px;
        margin-right: 10px;
    }

    .profileDialog {
        display: none;
        position: absolute;
        top: 60px;
        right: 10px;
        background-color: white;
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px;
        z-index: 998;
    }

        .profileDialog.active {
            display: block;
        }

        .profileDialog button {
            font-family: Arial, sans-serif;
            font-size: 16px;
            color: #333;
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: transparent;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-align: left;
            display: flex;
            align-items: center;
        }

            .profileDialog button:hover {
                background-color: #f3f3f3;
            }

            .profileDialog button img {
                width: 20px;
                /* Adjust icon size as needed */
                height: auto;
                margin-right: 8px;
                /* Add space between icon and text */
            }
</style>
<div class="header-bar">
    <div class="logo">
        <img src="~/img/logo.png" alt="Logo">
    </div>
    <div class="profile">
        <span class="profile-name"></span>
        <img class="profile-image" src="~/img/profile.svg" alt="Profile">
    </div>
    <div class="profileDialog">
        <button class="settings-button">
            <img src="~/img/settings.svg" alt="Settings">
            Настройки
        </button>
        <button class="logout-button">
            <img src="~/img/exit.svg" alt="Logout">
            Выход
        </button>
    </div>
</div>
<script>
    const profileImage = document.querySelector('.profile-image');
    const profileDialog = document.querySelector('.profileDialog');
    profileImage.addEventListener('click', () => {
        profileDialog.classList.toggle('active');
    });
    
    const settingsbutton = document.querySelector('.settings-button');
    settingsbutton.addEventListener('click', () => {
        window.location.href = "/Settings/Settings";
    });
    const logoutbutton = document.querySelector('.logout-button');
    logoutbutton.addEventListener('click', () => {
        window.location.href = "/";
    });

    function closeDialog() {
        profileDialog.classList.remove('active');
    }
    document.addEventListener('click', (event) => {
        if (!profileDialog.contains(event.target) && !profileImage.contains(event.target)) {
            closeDialog();
        }
    });


    const profileName = document.querySelector('.profile-name');
    const img = document.querySelector('.profile-image');
    $(document).ready(function () {
        var options = {
            url: "/Settings/HeaderBarData",
            type: "get",
            async: false
        };

        $.ajax(options).done(function (data) {
            profileName.textContent = data.username;
            if (data.imageUrl != null) {
                img.src = data.imageUrl;
            }
        });
    });

    const logo = document.querySelector('.logo');
    logo.addEventListener('click', () => {
        window.location.href = '/Dashboard/Dashboard';
    });
</script>
